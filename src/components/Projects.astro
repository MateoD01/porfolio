---
import Php from './icons/Php.astro';
import TailwindCSS from './icons/TailwindCSS.astro';
import Laravel from './icons/Laravel.astro';
import JavaScript from './icons/JavaScript.astro';
import MySQL from './icons/MySQL.astro';

const TAGS = {
    PHP: {
        name: "PHP",
        class: "bg-white/10 text-white",
        icon: Php,
    },
    TAILWIND: {
        name: 'Tailwind CSS',
        class: 'bg-white/10 text-white',
        icon: TailwindCSS,
    },
    LARAVEL: {
        name: "Laravel",
        class: "bg-white/10 text-red",
        icon: Laravel,
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-white/10 text-white",
        icon: JavaScript,
    },
    MYSQL: {
        name: "MySQL",
        class: "bg-white/10 text-white",
        icon: MySQL,
    }
}

const PROJECTS = [
    {
        title: 'SnapHub - Red Social',
        description: 'Red social agradable e intuitiva que emula la experiencia de Instagram, pudiendo crear publicaciones, comentarlas, dar likes y seguir a otros usuarios.',
        link: 'https://jefsoda.nyc.dom.my.id/login',
        github: 'https://github.com/MateoD01/SnapHub',
        image: '/projects/Snaphub.webp',
        tags: [TAGS.PHP, TAGS.LARAVEL, TAGS.TAILWIND, TAGS.JAVASCRIPT, TAGS.MYSQL]
    },
]
---

{
    PROJECTS.map(({ image, title, description, tags }) =>(
        <article>
            <h3 class="text-2xl font-semibold text-cyan-400 mb-2">{title}</h3>
            <p class="text-lg mb-2 text-pretty">{description}</p>
            <ul class="flex flex-row flex-wrap gap-x-2 mb-2">
                {tags.map(tag => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-2 px-3`}>
                            <tag.icon class="size-5" />
                            {tag.name}
                        </span>
                    </li>
                ))}    
            </ul>
            <a href="https://jefsoda.nyc.dom.my.id/login" target="_blank">
                <img 
                class="mt-5 rounded-3xl shadow-2xl shadow-white/10 hover:scale-105 hover:brightness-105 transition-all duration-300" 
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`}>    
            </a>           
        </article>
    ))
}